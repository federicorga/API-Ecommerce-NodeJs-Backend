<div>
    <h1>LISTA DE PRODUCTOS</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Code</th>
                <th>Price</th>
                <th>Status</th>
                <th>Stock</th>
                <th>Category</th>
                <th>ID</th>
                <th>agregar al Carrito</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr class="product">
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.code}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this._id}}</td>
                <td><button type="button" data-id="{{this._id}}" data-custom="{{../cart}}"  value="Agregar al Carrito" class="addToCart">Agregar al Carrito</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{#if hasPrevPage}}
    <a href="/views/products?limit={{limit}}&page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

     {{#if hasNextPage}}
    <a href="/views/products?limit={{limit}}&page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}

  <a href="/views/profile"><button>Ir a perfil</button></a>
   <a href="/views/cart/{{cart}}"><button>Ir al Carrito</button></a>
  
</div>


<script src="/js/helperProducts.js"></script> <!-- Archivo de la carpeta public es como poner href="localhost:8080...public/js/index.js"  -->

